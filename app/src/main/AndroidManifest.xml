<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.calculatortest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MoreFeatures"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".Length_Converter"
            android:parentActivityName=".MoreFeatures"></activity>
        <activity android:name=".Mass_Converter"
            android:parentActivityName=".MoreFeatures"></activity>
        <activity android:name=".Temperature_Converter"
            android:parentActivityName=".MoreFeatures"></activity>
        <activity android:name=".Area_Converter"
            android:parentActivityName=".MoreFeatures"></activity>
        <activity android:name=".Volume_Converter"
            android:parentActivityName=".MoreFeatures"></activity>
        <activity android:name=".Currency_Converter"
            android:parentActivityName=".MoreFeatures"></activity>
        <activity android:name=".BMI_Converter"
            android:parentActivityName=".MoreFeatures"></activity>
    </application>

</manifest>